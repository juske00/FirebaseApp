<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firebaseapp">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseApp">

        <activity android:name=".activities.LoginActivity"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity android:name=".activities.ProfileActivity"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity
            android:name=".activities.FootballActivity"
            android:theme="@style/Theme.FirebaseApp.NoActionBar" />
        <activity android:name=".activities.ChatActivity"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity android:name=".activities.MainActivity"
            android:theme="@style/Theme.FirebaseApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RunActivity"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity android:name=".activities.AddRun"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity android:name=".activities.RunningPage"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity android:name=".activities.AddMatch"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity android:name=".activities.FootballPage"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity android:name=".activities.UserPage"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
        <activity android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.FirebaseApp.NoActionBar"/>
    </application>

</manifest>